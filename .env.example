# SehatAgent Environment Configuration
# Copy this file to .env and fill in your values

# ============ Application ============
APP_NAME=SehatAgent
APP_VERSION=1.0.0
DEBUG=false

# ============ GCP Configuration ============
# Your GCP Project ID (provided by hackathon organizers)
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# ============ Vertex AI ============
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-1.5-pro
VERTEX_AI_EMBEDDING_MODEL=textembedding-gecko@003

# ============ Cloud SQL (PostgreSQL) ============
# Database credentials (provided by hackathon organizers)
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=sehatagent
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# For Cloud Run (Unix socket connection)
# DB_INSTANCE_CONNECTION_NAME=project:region:instance

# ============ FAISS Configuration ============
FAISS_INDEX_PATH=/app/data/faiss_index
FAISS_DIMENSION=768

# ============ Degraded Mode ============
ENABLE_DEGRADED_MODE=true
DEGRADED_MODE_TIMEOUT=5

# ============ Rate Limiting ============
MAX_REQUESTS_PER_MINUTE=60

# ============ Speech Configuration ============
# Supported language codes for speech-to-text
SPEECH_LANGUAGE_CODES=["ur-PK", "pa-IN", "en-US"]
